<% include ./partials/header %>

<div class="ui main text container">
 <div class="ui huge header"></div>
 <div class="ui top attached segmant">
   <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
     <div>
        <h1 class="ui header"><%= blog.title %></h1>
        <div class="item">
           <div class="ui centered big image"><img  src="<%= blog.image %>"></div>
        </div>
        
        <div class="content">
        
         <div class="meta">
            <span><%= blog.created %><span>
         </div>
         <div class="description">
           <p><%= blog.body %></p>
         </div>
         <div class="extra">
             <a class="ui floated violet button" href="/blogs/<%= blog._id %>">Read more
             <i class="right chevron icon"></i></a>
         </div>
        </div>
        
     </div>
    <% }); %>
   </div>
 </div>
</div>


<% include ./partials/footer %>