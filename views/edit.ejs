<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="column">
    <div class="ui huge header">Edit <%= blog.title %> </div>

    <form class="ui form" action="/blogs<%= blog.id %>?_method=PUT" method="POST">
       <div class="field">
         <label>Title</label>
          <input type="text" name="blog[title]" value="<%= blog.title %>"></input>
       </div>
       
       
      <div class="field">
        <label>Image URL</label>
          <input type="text" name="blog[image]"  value="<%= blog.image %>"></input>
     </div>
     
     
     <div class="field">
        <label>Blog Content</label>
        <textarea  name="blog[body]"><%= blog.body %></textarea>
     </div>
     
  <button class="ui violet basic big button" type="submit">Submit</button>
</form>
    </div>
</div>
    

<% include ./partials/footer %>